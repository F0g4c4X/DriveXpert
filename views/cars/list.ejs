<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>DriveXpert - Meus Carros</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.2/font/bootstrap-icons.css" rel="stylesheet">
    <style>
        .car-card {
            transition: transform 0.2s;
        }
        .car-card:hover {
            transform: translateY(-5px);
        }
        .status-badge {
            position: absolute;
            top: 10px;
            right: 10px;
        }
    </style>
</head>
<body class="bg-light">
    <div class="container py-4">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2>Meus Carros</h2>
            <a href="/cars/new" class="btn btn-primary">
                <i class="bi bi-plus-lg"></i> Novo Carro
            </a>
        </div>

        <% if (cars.length === 0) { %>
            <div class="text-center py-5">
                <i class="bi bi-car-front display-1 text-muted"></i>
                <h3 class="mt-3">Nenhum carro cadastrado</h3>
                <p class="text-muted">Clique no botão "Novo Carro" para começar</p>
            </div>
        <% } else { %>
            <div class="row">
                <% cars.forEach(car => { %>
                    <div class="col-md-4 mb-4">
                        <div class="card car-card h-100">
                            <div class="card-body">
                                <% if (car.status === 'pendente') { %>
                                    <span class="badge bg-warning status-badge">Pendente</span>
                                <% } else if (car.status === 'avaliado') { %>
                                    <span class="badge bg-success status-badge">Avaliado</span>
                                <% } else { %>
                                    <span class="badge bg-primary status-badge">Vendido</span>
                                <% } %>

                                <h5 class="card-title"><%= car.marca %> <%= car.modelo %></h5>
                                <h6 class="card-subtitle mb-2 text-muted">Ano <%= car.ano %></h6>
                                
                                <div class="mb-3">
                                    <small class="text-muted">
                                        <i class="bi bi-speedometer2"></i> <%= car.kilometragem.toLocaleString() %> km
                                    </small>
                                    <br>
                                    <small class="text-muted">
                                        <i class="bi bi-tag"></i> Placa: <%= car.placa %>
                                    </small>
                                </div>

                                <div class="d-flex justify-content-between align-items-center">
                                    <a href="/cars/<%= car._id %>" class="btn btn-outline-primary btn-sm">
                                        <i class="bi bi-eye"></i> Detalhes
                                    </a>
                                    
                                    <div class="btn-group">
                                        <a href="/cars/<%= car._id %>/edit" class="btn btn-outline-secondary btn-sm">
                                            <i class="bi bi-pencil"></i>
                                        </a>
                                        <% if (car.status === 'pendente') { %>
                                            <button type="button" class="btn btn-outline-danger btn-sm" 
                                                    data-bs-toggle="modal" 
                                                    data-bs-target="#deleteModal<%= car._id %>">
                                                <i class="bi bi-trash"></i>
                                            </button>
                                        <% } %>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Modal de Confirmação de Exclusão -->
                        <div class="modal fade" id="deleteModal<%= car._id %>" tabindex="-1">
                            <div class="modal-dialog">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h5 class="modal-title">Confirmar Exclusão</h5>
                                        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                                    </div>
                                    <div class="modal-body">
                                        Tem certeza que deseja excluir o carro <%= car.marca %> <%= car.modelo %>?
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                                        <form action="/cars/<%= car._id %>/delete" method="POST" class="d-inline">
                                            <button type="submit" class="btn btn-danger">Excluir</button>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                <% }); %>
            </div>
        <% } %>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html> 