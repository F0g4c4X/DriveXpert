<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>DriveXpert - Dashboard</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.2/font/bootstrap-icons.css" rel="stylesheet">
    <style>
        .sidebar {
            min-height: 100vh;
            background-color: #343a40;
            padding-top: 20px;
        }
        .sidebar a {
            color: #fff;
            text-decoration: none;
            padding: 10px 15px;
            display: block;
        }
        .sidebar a:hover {
            background-color: #495057;
        }
        .main-content {
            padding: 20px;
        }
        .card-dashboard {
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0,0,0,0.1);
        }
    </style>
</head>
<body>
    <div class="container-fluid">
        <div class="row">
            <!-- Sidebar -->
            <div class="col-md-2 sidebar">
                <div class="text-center mb-4">
                    <h3 class="text-white">DriveXpert</h3>
                </div>
                <nav>
                    <a href="/dashboard"><i class="bi bi-speedometer2"></i> Dashboard</a>
                    
                    <% if (userRole === 'seller') { %>
                        <a href="/cars/new"><i class="bi bi-plus-circle"></i> Novo Carro</a>
                        <a href="/cars/my"><i class="bi bi-card-list"></i> Meus Carros</a>
                    <% } %>
                    
                    <% if (userRole === 'evaluator') { %>
                        <a href="/evaluations/pending"><i class="bi bi-clipboard-check"></i> Avaliações Pendentes</a>
                        <a href="/evaluations/my"><i class="bi bi-journal-text"></i> Minhas Avaliações</a>
                    <% } %>
                    
                    <% if (userRole === 'client') { %>
                        <a href="/cars/available"><i class="bi bi-car-front"></i> Carros Disponíveis</a>
                        <a href="/evaluations/request"><i class="bi bi-clipboard"></i> Solicitar Avaliação</a>
                    <% } %>
                    
                    <a href="/auth/logout"><i class="bi bi-box-arrow-right"></i> Sair</a>
                </nav>
            </div>

            <!-- Main Content -->
            <div class="col-md-10 main-content">
                <div class="row mb-4">
                    <div class="col">
                        <h2>Bem-vindo, <%= user.name %></h2>
                        <p class="text-muted">Painel de 
                            <% if (userRole === 'seller') { %>
                                Vendedor
                            <% } else if (userRole === 'evaluator') { %>
                                Avaliador
                            <% } else if (userRole === 'client') { %>
                                Cliente
                            <% } %>
                        </p>
                    </div>
                </div>

                <!-- Dashboard Cards -->
                <div class="row">
                    <% if (userRole === 'seller') { %>
                        <div class="col-md-4 mb-4">
                            <div class="card card-dashboard">
                                <div class="card-body">
                                    <h5 class="card-title">Carros Cadastrados</h5>
                                    <p class="card-text display-4"><%= stats.totalCars || 0 %></p>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4 mb-4">
                            <div class="card card-dashboard">
                                <div class="card-body">
                                    <h5 class="card-title">Aguardando Avaliação</h5>
                                    <p class="card-text display-4"><%= stats.pendingEvaluations || 0 %></p>
                                </div>
                            </div>
                        </div>
                    <% } %>

                    <% if (userRole === 'evaluator') { %>
                        <div class="col-md-4 mb-4">
                            <div class="card card-dashboard">
                                <div class="card-body">
                                    <h5 class="card-title">Avaliações Pendentes</h5>
                                    <p class="card-text display-4"><%= stats.pendingEvaluations || 0 %></p>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4 mb-4">
                            <div class="card card-dashboard">
                                <div class="card-body">
                                    <h5 class="card-title">Avaliações Realizadas</h5>
                                    <p class="card-text display-4"><%= stats.completedEvaluations || 0 %></p>
                                </div>
                            </div>
                        </div>
                    <% } %>

                    <% if (userRole === 'client') { %>
                        <div class="col-md-4 mb-4">
                            <div class="card card-dashboard">
                                <div class="card-body">
                                    <h5 class="card-title">Carros Disponíveis</h5>
                                    <p class="card-text display-4"><%= stats.availableCars || 0 %></p>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4 mb-4">
                            <div class="card card-dashboard">
                                <div class="card-body">
                                    <h5 class="card-title">Minhas Solicitações</h5>
                                    <p class="card-text display-4"><%= stats.myRequests || 0 %></p>
                                </div>
                            </div>
                        </div>
                    <% } %>
                </div>

                <!-- Recent Activity -->
                <div class="row mt-4">
                    <div class="col">
                        <div class="card card-dashboard">
                            <div class="card-header">
                                <h5 class="mb-0">Atividades Recentes</h5>
                            </div>
                            <div class="card-body">
                                <% if (activities && activities.length > 0) { %>
                                    <ul class="list-group list-group-flush">
                                        <% activities.forEach(activity => { %>
                                            <li class="list-group-item">
                                                <i class="bi <%= activity.icon %>"></i>
                                                <%= activity.description %>
                                                <small class="text-muted float-end"><%= activity.date %></small>
                                            </li>
                                        <% }) %>
                                    </ul>
                                <% } else { %>
                                    <p class="text-muted text-center">Nenhuma atividade recente</p>
                                <% } %>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html> 